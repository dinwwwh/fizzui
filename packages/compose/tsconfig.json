{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* Linting */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "build",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
